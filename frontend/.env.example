# Environment configuration for performance and optimization

# Node environment
NODE_ENV=production

# Performance settings
VITE_ENABLE_PERFORMANCE_METRICS=false
VITE_ENABLE_BUNDLE_ANALYZER=false

# CDN configuration (for image optimization)
VITE_CDN_URL=
VITE_IMAGE_OPTIMIZATION_ENABLED=false

# Compression settings
VITE_ENABLE_GZIP=true
VITE_ENABLE_BROTLI=true

# Cache settings
VITE_CACHE_MAX_AGE=31536000
VITE_STATIC_CACHE_MAX_AGE=86400

# Database optimization
DATABASE_POOL_MIN=2
DATABASE_POOL_MAX=10
DATABASE_IDLE_TIMEOUT=30000

# Security headers
SECURITY_HEADERS_ENABLED=true
CSP_ENABLED=true

# Performance monitoring
ENABLE_PERFORMANCE_MONITORING=false
PERFORMANCE_BUDGET_JS=500
PERFORMANCE_BUDGET_CSS=100
PERFORMANCE_BUDGET_IMAGES=1000